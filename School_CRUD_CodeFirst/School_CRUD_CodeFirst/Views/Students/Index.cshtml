@model IEnumerable<School_CRUD_CodeFirst.Models.Tables_Class.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avatar_Path)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avatar_Path)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Student_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Student_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Student_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
